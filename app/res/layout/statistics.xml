<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/statistics_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundPrimary"
    tools:context=".view.StatisticsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/statistics_actionbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/backgroundPrimary"
        android:elevation="0dp"
        app:title="@string/statistics"
        app:titleTextColor="@color/colorText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="UnusedAttribute"/>

    <GridView
        android:id="@+id/statistics_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:numColumns="2"
        android:verticalSpacing="16dp"
        android:horizontalSpacing="16dp"
        android:padding="16dp"
        android:stretchMode="columnWidth"
        app:layout_constraintTop_toBottomOf="@id/statistics_actionbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
